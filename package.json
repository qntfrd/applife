  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/mocha": "9.1.1",
    "@types/node": "16.11.38",
    "chai": "4.3.6",
    "mocha": "9.2.2",
    "nyc": "15.1.0",
    "ts-node": "10.7.0",
